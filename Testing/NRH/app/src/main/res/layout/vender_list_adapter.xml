<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/paper_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vender_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dsd"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_15" />
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="5"
                android:stepSize="1.0"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"/>
            <TextView
                android:id="@+id/vender_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dsd"
                android:visibility="gone"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/bid_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dsd"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_15" />
            <TextView
                android:id="@+id/featured_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dsd"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/accepted_buttons_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/corner_red"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="Decline"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/_2sdp"
                    android:id="@+id/decline_tv"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/corner_green"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="Accept"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/_2sdp"
                    android:id="@+id/accept_tv"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_gray"
                android:text="Wait for Vender Approval"
                android:textColor="@color/quantum_black_secondary_text"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/wait_for_venter"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/phone_call_whatsup_layout"
                android:visibility="visible">
                <TextView
                    android:id="@+id/provider_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:gravity="start"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_20" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_call"
                    android:background="@android:color/transparent"
                    android:id="@+id/phone_call_btn"
                    android:layout_margin="@dimen/_5sdp"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_whatsup"
                    android:background="@android:color/transparent"
                    android:id="@+id/whatsup_btn"
                    android:layout_margin="@dimen/_5sdp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>