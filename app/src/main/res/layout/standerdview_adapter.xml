<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/_20sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:id="@+id/placeofimage_tv"
            android:visibility="gone"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/colorwhite"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Tags"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_18"
            android:id="@+id/numeral_tv"
            android:fontFamily="@font/titinium_semibold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            tools:text="Tags"
            android:fontFamily="@font/titilium"
            android:textSize="@dimen/text_size_18"
            android:id="@+id/numeral_detail_tv"/>
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:paddingLeft="@dimen/_2sdp"
            android:textSize="@dimen/text_size_14"
            android:fontFamily="@font/titilium"
            android:autoSizeTextType="uniform"
            android:textColor="@color/colorAccent"
            android:maxLines="1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_img"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="3">
            <TextView
                android:id="@+id/likecount_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/custome_ic_like"
                android:drawablePadding="@dimen/_3sdp"
                android:text="120"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/titilium"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/view_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_view"
                android:drawablePadding="@dimen/_3sdp"
                android:gravity="start|center"
                tools:text="120"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/titilium"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_email_address"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="120"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/titilium"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_small"
                android:id="@+id/action_menu_img"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:gravity="start"
            android:weightSum="5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/proffileImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_default_profile"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="1dp"
                android:layout_weight="0.8"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="3.7">

                <TextView
                    android:id="@+id/authore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:autoLink="web"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    tools:text="xyz"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:singleLine="true"/>



            </LinearLayout>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_follow_color"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical|center"
                android:id="@+id/menu_btn"
                android:layout_weight="0.5"/>
            <!-- android:src="@drawable/ic_menu_click"-->
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Tags"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_18" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tags_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source  "
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/source_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textColor="@color/weblink"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>