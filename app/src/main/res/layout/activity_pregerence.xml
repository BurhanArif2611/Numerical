<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PregerenceActivity">

    <include layout="@layout/tool_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tool_bar"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:layout_above="@+id/save_btn">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Topics"
            android:fontFamily="@font/titilium"
            android:textColor="@color/primary_text"
            android:id="@+id/hint_tv"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topics_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_below="@+id/hint_tv"
           android:layout_above="@+id/subhint_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numerons displayed on your dashboard are based on the topics you select here ."
            android:fontFamily="@font/titilium"
            android:textColor="@color/primary_text"
            android:id="@+id/subhint_tv"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_24sdp"
        android:background="@drawable/btn_background_colour_accent"
        android:drawableRight="@drawable/ic_right_arrow_white"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:text="@string/save"
        android:textAllCaps="true"
        android:textColor="@color/colorwhite"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:id="@+id/save_btn"
        android:layout_above="@+id/reset_tv"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:text="Reset"
        android:textAllCaps="true"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:id="@+id/reset_tv"/>
</RelativeLayout>