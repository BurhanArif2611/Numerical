<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_116"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/margin_4"
        app:cardElevation="@dimen/margin_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_116">


            <com.revauc.revolutionbuy.widget.roundedimageview.RoundedImageView
                android:id="@+id/image_item"
                android:layout_width="@dimen/margin_127"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_8"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/margin_4" />

            <com.revauc.revolutionbuy.widget.typeface.CustomTextView
                android:id="@+id/text_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:layout_toRightOf="@id/image_item"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textsize_15"
                app:customFont="@string/font_avenir_medium" />

            <com.revauc.revolutionbuy.widget.typeface.CustomTextView
                android:id="@+id/text_buyer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_product_name"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_toRightOf="@id/image_item"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_tab_inactive"
                android:textSize="@dimen/textsize_12"
                app:customFont="@string/font_avenir_regular" />

            <com.revauc.revolutionbuy.widget.typeface.CustomTextView
                android:id="@+id/text_buyer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_buyer_label"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_toRightOf="@id/image_item"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textsize_12"
                app:customFont="@string/font_avenir_regular" />

            <com.revauc.revolutionbuy.widget.typeface.CustomTextView
                android:id="@+id/text_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin_8"
                android:layout_toRightOf="@id/image_item"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/textsize_15"
                app:customFont="@string/font_avenir_bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>