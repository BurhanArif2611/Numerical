<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ListingViewFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_img"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/_5sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/placeofimage_tv"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="@dimen/text_size_24"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/last_modified_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_2sdp"
            android:textSize="@dimen/text_size_14"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            tools:text="dfdfdfdsfsdf"
            android:fontFamily="@font/titilium"
            android:layout_marginRight="@dimen/_2sdp"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="right"
            android:visibility="gone"
            android:layout_gravity="right"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/text_size_14"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:fontFamily="@font/titilium"
            android:layout_marginRight="@dimen/_2sdp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/describtion_tv"
            android:textColor="@color/primary_text"
            android:visibility="gone"
            android:fontFamily="@font/titilium"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/text_size_18"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_describtion_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/second_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:visibility="visible"
            android:layout_gravity="start|center"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/text_size_14"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/titilium"
            tools:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_img"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/likecount_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/custome_ic_like"
                android:drawablePadding="@dimen/_3sdp"
                android:text="120"
                android:fontFamily="@font/titilium"
                android:textSize="@dimen/text_size_14"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/view_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_view"
                android:drawablePadding="@dimen/_3sdp"
                android:gravity="start|center"
                android:text="120"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/titilium"
                android:textSize="@dimen/text_size_14"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_email_address"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="1"
                android:fontFamily="@font/titilium"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:gravity="start"
            android:weightSum="5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/proffileImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_default_profile"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="1dp"
                android:layout_weight="0.8"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="3.7">

                <TextView
                    android:id="@+id/authore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:autoLink="web"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    tools:text="xyz"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:singleLine="true"/>



            </LinearLayout>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_follow_color"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical|center"
                android:id="@+id/menu_btn"
                android:layout_weight="0.5"/>
            <!-- android:src="@drawable/ic_menu_click"-->
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Tags"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_18" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tags_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source  "
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/source_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textColor="@color/weblink"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>