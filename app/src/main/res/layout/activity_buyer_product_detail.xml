<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_269">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <ImageView
                android:id="@+id/image_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_97"
                android:background="@drawable/bg_gradiant"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_54"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_gradiant_bottom"/>

            <com.revauc.revolutionbuy.widget.CircleIndicator
                android:id="@+id/indicator_images"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_16"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_14"
                app:ci_height="@dimen/margin_5"
                app:ci_width="@dimen/margin_5" />

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="@dimen/margin_18"
                android:layout_height="@dimen/margin_18"
                android:src="@drawable/ic_back_white"
                android:layout_marginTop="@dimen/margin_37"
                android:layout_marginStart="@dimen/margin_16"/>

            <ImageView
                android:id="@+id/image_delete"
                android:layout_width="@dimen/margin_18"
                android:layout_height="@dimen/margin_18"
                android:src="@drawable/ic_delete_white"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_37"
                android:layout_marginEnd="@dimen/margin_16"/>

            <ImageView
                android:id="@+id/image_edit"
                android:layout_width="@dimen/margin_18"
                android:layout_height="@dimen/margin_18"
                android:src="@drawable/ic_edit_white"
                android:layout_toStartOf="@id/image_delete"
                android:layout_marginTop="@dimen/margin_37"
                android:layout_marginEnd="@dimen/margin_20"/>

            <ImageView
                android:id="@+id/image_share"
                android:layout_width="@dimen/margin_18"
                android:layout_height="@dimen/margin_18"
                android:src="@drawable/ic_share_white"
                android:layout_toStartOf="@id/image_edit"
                android:layout_marginTop="@dimen/margin_37"
                android:layout_marginEnd="@dimen/margin_20"/>

        </RelativeLayout>

        <com.revauc.revolutionbuy.widget.typeface.CustomTextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_24"
            android:textColor="@color/textColorDark"
            android:paddingTop="@dimen/margin_16"
            android:background="@color/white"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16"
            android:text="Skechers Shoes"
            app:customFont="@string/font_avenir_medium"/>

        <com.revauc.revolutionbuy.widget.typeface.CustomTextView
            android:id="@+id/text_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/color_label"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingTop="@dimen/margin_6"
            android:text="Antiques, Collectibles"
            android:drawablePadding="@dimen/margin_5"
            android:drawableStart="@drawable/ic_tag_list"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_18"
            app:customFont="@string/font_avenir_regular"/>

        <com.revauc.revolutionbuy.widget.typeface.CustomTextView
            android:id="@+id/text_description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/color_label"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:text="@string/description"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_9"
            app:customFont="@string/font_avenir_regular"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:alpha="0.5"
            android:background="@color/color_tab_inactive"/>

        <com.revauc.revolutionbuy.widget.typeface.CustomTextView
            android:id="@+id/text_description_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_15"
            android:textColor="@color/textColorDark"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingTop="@dimen/margin_16"
            android:text="@string/description"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_20"
            app:customFont="@string/font_avenir_regular"/>

        <com.revauc.revolutionbuy.widget.typeface.CustomTextView
            android:id="@+id/text_seller_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/ic_button_blue"
            android:padding="@dimen/margin_16"
            android:layout_margin="@dimen/margin_16"
            android:text="View seller's offers"
            android:paddingBottom="@dimen/margin_20"
            app:customFont="@string/font_avenir_regular"/>


    </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
